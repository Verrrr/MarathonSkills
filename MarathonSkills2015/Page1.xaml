<Page
    x:Class="MarathonSkills2015.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarathonSkills2015"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    
    <Grid>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center">
            <Button Content="I want to be a runner" FontSize="20" Padding="200, 10" Margin="0,20" HorizontalAlignment="Stretch" Click="Button_Click"/>
            <Button Content="I want to sponsor a runner" FontSize="20" Padding="200, 10" Margin="0,20" HorizontalAlignment="Stretch" Click="Button_Click_1"/>
            <Button Content="I want to find out more" FontSize="20" Padding="200, 10" Margin="0,20" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <Frame x:Name="LoginFrame" x:FieldModifier="public" Grid.Row="0" BorderThickness="2,0,0,0" Visibility="Visible">
            <Button Content="Login" Padding="30,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="20" Margin="0,0,20,20"/>
        </Frame>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
