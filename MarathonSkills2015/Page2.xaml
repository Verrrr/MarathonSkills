<Page
    x:Class="MarathonSkills2015.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarathonSkills2015"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

   
    <Grid>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center">
            <Button Content="I have competed before" FontSize="20" Padding="200, 10" Margin="0,20" HorizontalAlignment="Stretch" Click="Button_Click"/>
            <Button Content="I am a new competitor" FontSize="20" Padding="200, 10" Margin="0,20" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
